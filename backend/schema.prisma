model Paciente {
    id                  Int          @id @default(autoincrement())
    nome                String
    informacoesPessoais String
    historicoMedico     String
    unidadeSaude        UnidadeSaude @relation(fields: [unidadeId], references: [id])
    unidadeId           Int
}

model FornecedoresProdutos {
    id               Int             @id @default(autoincrement())
    nome             String
    contato          String
    catalogoProdutos String
    produtos         ProdutoMedico[]
}

model UnidadeSaude {
    id            Int        @id @default(autoincrement())
    nome          String
    localizacao   String
    especialidade String
    capacidade    Int
    pacientes     Paciente[]
}

model VeiculoMedico {
    id         Int              @id @default(autoincrement())
    detalhes   String
    manutencao String
    rotas      RotaTransporte[]
}

model ProdutoMedico {
    id           Int                  @id @default(autoincrement())
    descricao    String
    estoque      Int
    validade     String
    fornecedor   FornecedoresProdutos @relation(fields: [fornecedorId], references: [id])
    fornecedorId Int
}

model RotaTransporte {
    id             Int           @id @default(autoincrement())
    detalhesRota   String
    otimizacaoRota String
    veiculoMedico  VeiculoMedico @relation(fields: [veiculoId], references: [id])
    veiculoId      Int
}
